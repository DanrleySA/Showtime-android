<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="danrleysa.com.showtime.controller.Fragment.CadEventoFragment"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data e Hora"
            android:textSize="18sp" />

        <Button
            android:id="@+id/CadEventoBtnData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data" />

        <Button
            android:id="@+id/CadEventoBtnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/CadEventoEdtLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descricao"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/CadEventoEdtDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.63"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textAlignment="textStart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:id="@+id/CadEventoBtnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.53"
            android:text="Criar"
            android:textSize="18sp" />

        <Button
            android:id="@+id/CadEventoBtnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.41"
            android:text="Voltar"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>
